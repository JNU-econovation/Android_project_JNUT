<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:id="@+id/registerButton"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/acronblur">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1.3"
        android:orientation="vertical">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:text="J:NUT"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_gravity="center"
            android:text="전남대 학생 커뮤니티"
            android:textColor="@color/colorAccent"
            android:textSize="16dp" />
    <View
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:layout_gravity="center"
        android:layout_width="60dp"
        android:layout_height="2dp" />
    </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1.2"
            android:layout_marginTop="10dp"
            android:orientation="vertical"
            android:background="#70BC7B5E"
            android:paddingTop="40dp">

            <Button
                android:id="@+id/boardButton"
                android:layout_width="250dp"
                android:layout_height="100dp"
                android:background="#00ffffff"
                android:layout_gravity="center"
                android:drawableLeft="@drawable/board"
                android:text="ANONIMOUS BOARD" />

    </LinearLayout>
    <LinearLayout
        android:layout_height="0dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:background="#50DDA86F">

            <Button
                android:id="@+id/foodButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ffffff"
                android:drawableTop="@drawable/spoon"
                android:text="FOOD" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="#409D845C"
            android:layout_gravity="center">

            <Button
                android:id="@+id/mapButton"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="#00ffffff"
                android:drawableTop="@drawable/map"
                android:text="MAP" />
        </LinearLayout>


    </LinearLayout>
    </LinearLayout>